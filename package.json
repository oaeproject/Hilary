  },
  "scripts": {
    "test": "nyc --reporter=html --reporter=text --reporter=lcov mocha -r esm 'node_modules/oae-tests/runner/before-tests.js' 'node_modules/oae-*/tests/**/*.js'",
    "test-module": "func() { mocha -r esm 'node_modules/oae-tests/runner/before-tests.js' $*; }; func",
    "test-module-with-coverage": "func() { nyc --reporter=html --reporter=text --reporter=lcov mocha -r esm 'node_modules/oae-tests/runner/before-tests.js' $*; }; func",
    "test-with-coverage": "npx nyc --reporter=lcov npm test && cat ./coverage/lcov.info | codacy-coverage",
    "migrate": "func() { node -r esm 'migrate.js' '--keyspace' $1 ; }; func",
    "prepare-etherpad": "./prepare-etherpad.sh",
    "prepare-ethercalc": "cd ethercalc && yarn",
    "prepare-3akai": "cd 3akai-ux && npx lerna bootstrap",
    "start": "node -r esm app.js | npx bunyan",
    "ethercalc": "npx pm2 startOrReload process.json --only Ethercalc",
    "etherpad": "npx pm2 startOrReload process.json --only Etherpad",
    "server": "npx pm2 startOrReload process.json --only Hilary",
    "all": "npx pm2 startOrReload process.json",
    "logs": "npx pm2 logs --raw | npx bunyan",
    "lint": "xo --prettier --quiet 'packages/**/*.js'",
    "lint-module": "func() { xo --prettier --quiet $*; }; func",
    "format": "xo --fix --prettier --quiet 'packages/**/*.js'",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "nyc": {
    "include": "packages/**/*",
    "exclude": [
      "3akai-ux",
      "**/domstubs.js "
    ]
  },
  "xo": {
    "prettier": true,
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "ignores": [
      "**/processors/file/domstubs.js",
      "**/tests/*.js"
    ],
    "rules": {
      "node/prefer-promises/fs": "off",
      "import/no-extraneous-dependencies": "off",
      "promise/prefer-await-to-then": "off",
      "capitalized-comments": "off",
      "max-params": "off",
      "max-nested-callbacks": "off",
      "prettier/prettier": "error",
      "no-use-before-define": "off",
      "no-warning-comments": "off",
      "prefer-named-capture-group": "off",
      "import/no-unresolved": "off"
    },
    "env": [
      "mocha"
    ],
    "overrides": [
      {
        "files": "**/tests/*.js",
        "rules": {
          "max-lines": 0,
          "no-unused-vars": "off",
          "handle-callback-err": "off"
        }
      }
    ]
  },
  "snyk": true
}
